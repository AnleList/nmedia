<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.ui.FeedFragment"
        tools:layout="@layout/feed_fragmet" >
        <action
            android:id="@+id/action_feedFragment_to_postContentFragment"
            app:destination="@id/postContentFragment" />
        <action
            android:id="@+id/action_feedFragment_to_postViewingFragment"
            app:destination="@id/postViewingFragment" />
    </fragment>
    <fragment
        android:id="@+id/postContentFragment"
        android:name="ru.netology.nmedia.ui.PostEditContentFragment"
        tools:layout="@layout/post_edit_content_fragment" >

        <argument
            android:name="initialContent"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/postViewingFragment"
        android:name="ru.netology.nmedia.ui.PostViewingFragment"
        android:label="post_viewing_fragment"
        tools:layout="@layout/post_viewing_fragment" >
        <action
            android:id="@+id/action_postViewingFragment_to_postContentFragment"
            app:destination="@id/postContentFragment" />
        <argument
            android:name="postToViewing"
            app:argType="ru.netology.nmedia.data.Post" />
        <action
            android:id="@+id/action_postViewingFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
</navigation>